<?xml version="1.0" encoding="UTF-8"?>
<benchmark tool="tools.synthesis" timelimit="300s" hardtimelimit="300s" memlimit="10GB">

  <tasks name="SAT Benchmarks">
    <include>benchmarks/files/robust/sat*.yml</include>
    <propertyfile>benchmarks/sat.txt</propertyfile>
  </tasks>

  <tasks name="UNSAT Benchmarks">
    <include>benchmarks/files/robust/unsat*.yml</include>
    <propertyfile>benchmarks/unsat.txt</propertyfile>
  </tasks>

    <!-- Define executors -->
    <rundefinition name="Molehill-Sched-CE">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>sched</option>
        <option>--constraint</option>
        <option>existsforall</option>
        <option>--forall</option>
        <option>sketch_hole</option>
    </rundefinition>

    <rundefinition name="Molehill-Det">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--deterministic</option>
        <option>--constraint</option>
        <option>existsforall</option>
        <option>--forall</option>
        <option>sketch_hole</option>
    </rundefinition>

    <rundefinition name="Molehill-All-CE">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>all</option>
        <option>--constraint</option>
        <option>existsforall</option>
        <option>--forall</option>
        <option>sketch_hole</option>
    </rundefinition>

    <rundefinition name="Molehill-MC-CE">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>mc</option>
        <option>--constraint</option>
        <option>existsforall</option>
        <option>--forall</option>
        <option>sketch_hole</option>
    </rundefinition>

    <rundefinition name="Molehill-No-CE">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>none</option>
        <option>--constraint</option>
        <option>existsforall</option>
        <option>--forall</option>
        <option>sketch_hole</option>
    </rundefinition>
</benchmark>
