<?xml version="1.0" encoding="UTF-8"?>
<benchmark tool="tools.synthesis" timelimit="600s" hardtimelimit="600s" memlimit="10GB">
	
    <!-- Define benchmarks -->
    <tasks>
        <!-- Benchmarks from JAIR -->
        <withoutfile>resources/benchmark/jair/sat_dpm</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_grid</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_grid-10-sl-4fsc</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_grid-meet-sl-2fsc</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_herman</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_maze</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_maze-sl-5</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_pole</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_pole-res</withoutfile>
        <withoutfile>resources/benchmark/jair/sat_refuel-06-res</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_dpm</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_grid</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_grid-10-sl-4fsc</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_grid-meet-sl-2fsc</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_herman</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_maze</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_maze-sl-5</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_pole</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_pole-res</withoutfile>
        <withoutfile>resources/benchmark/jair/unsat_refuel-06-res</withoutfile>

        <!-- Benchmarks from POMDPs -->
        <withoutfile>resources/benchmark/pomdps/dontknow_crypt</withoutfile>
        <withoutfile>resources/benchmark/pomdps/dontknow_drone</withoutfile>
        <withoutfile>resources/benchmark/pomdps/dontknow_network-priorities</withoutfile>
        <withoutfile>resources/benchmark/pomdps/sat_network</withoutfile>
        <withoutfile>resources/benchmark/pomdps/sat_network-priorities</withoutfile>
        <withoutfile>resources/benchmark/pomdps/sat_samplerocks</withoutfile>
        <withoutfile>resources/benchmark/pomdps/unsat_network</withoutfile>
        <withoutfile>resources/benchmark/pomdps/unsat_samplerocks</withoutfile>
        <withoutfile>resources/benchmark/pomdps/dontknow_hallway</withoutfile>
        <withoutfile>resources/benchmark/pomdps/sat_hallway</withoutfile>
    </tasks>

    <!-- Define executors -->
    <rundefinition name="Molehill">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
    </rundefinition>

    <rundefinition name="Molehill (Deterministic)">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--deterministic</option>
    </rundefinition>

    <rundefinition name="Molehill (only MC-CE)">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>mc</option>
    </rundefinition>

    <rundefinition name="Molehill (No CE)">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>none</option>
    </rundefinition>

    <rundefinition name="Paynt-AR">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>ar</option>
    </rundefinition>

    <rundefinition name="Paynt-CEGIS">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>cegis</option>
    </rundefinition>

    <rundefinition name="Paynt-Hybrid">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>hybrid</option>
    </rundefinition>
</benchmark>
