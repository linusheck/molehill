    <!-- Define executors -->
    <rundefinition name="Molehill">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
    </rundefinition>

    <rundefinition name="Molehill-Det">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--deterministic</option>
    </rundefinition>

    <rundefinition name="Molehill-Diseq">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--diseq</option>
    </rundefinition>

    <rundefinition name="Molehill-MC-CE">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>mc</option>
    </rundefinition>

    <rundefinition name="Molehill-No-CE">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>none</option>
    </rundefinition>

    <rundefinition name="Paynt-AR">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>ar</option>
    </rundefinition>

    <rundefinition name="Paynt-CEGIS">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>cegis</option>
    </rundefinition>

    <rundefinition name="Paynt-Hybrid">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>hybrid</option>
    </rundefinition>
</benchmark>
