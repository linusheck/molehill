<?xml version="1.0" encoding="UTF-8"?>
<benchmark tool="tools.synthesis" timelimit="600s" hardtimelimit="600s" memlimit="1GB">

  <tasks name="SAT Benchmarks">
    <include>benchmarks/files/sat*.yml</include>
    <propertyfile>benchmarks/sat.txt</propertyfile>
  </tasks>

  <tasks name="UNSAT Benchmarks">
    <include>benchmarks/files/unsat*.yml</include>
    <propertyfile>benchmarks/unsat.txt</propertyfile>
  </tasks>

	<!-- <tasks name="sat_dpm">
