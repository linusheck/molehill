<?xml version="1.0" encoding="UTF-8"?>
<benchmark tool="tools.synthesis" timelimit="600s" hardtimelimit="600s" memlimit="10GB">
	
    <!-- Define benchmarks -->
    <tasks>
        <withoutfile>resources/jair/dpm</withoutfile>
        <withoutfile>resources/jair/grid</withoutfile>
        <withoutfile>resources/jair/grid-10-sl-4fsc</withoutfile>
        <withoutfile>resources/jair/grid-meet-sl-2fsc</withoutfile>
        <withoutfile>resources/jair/herman</withoutfile>
        <withoutfile>resources/jair/maze</withoutfile>
        <withoutfile>resources/jair/maze-sl-5</withoutfile>
        <withoutfile>resources/jair/pole</withoutfile>
        <withoutfile>resources/jair/pole-res</withoutfile>
        <withoutfile>resources/jair/refuel-06-res</withoutfile>
    </tasks>

    <!-- Define executors -->
    <rundefinition name="Molehill">
        <column title="Molehill Execution Time" />
        <require cpuCores="1"/>
    <option>-m</option>
    <option>molehill</option>
    </rundefinition>

    <rundefinition name="Paynt-AR">
        <column title="Paynt AR Execution Time" />
        <require cpuCores="1"/>
    <option>build/paynt/paynt.py</option>
    <option>--method</option>
    <option>ar</option>
    </rundefinition>

    <rundefinition name="Paynt-CEGIS">
        <column title="Paynt CEGIS Execution Time" />
        <require cpuCores="1"/>
    <option>build/paynt/paynt.py</option>
    <option>--method</option>
    <option>cegis</option>
    </rundefinition>

    <rundefinition name="Paynt-Hybrid">
        <column title="Paynt Hybrid Execution Time" />
        <require cpuCores="1"/>
    <option>build/paynt/paynt.py</option>
    <option>--method</option>
    <option>hybrid</option>
    </rundefinition>
</benchmark>

