<?xml version="1.0" encoding="UTF-8"?>
<benchmark tool="tools.synthesis" timelimit="600s" hardtimelimit="600s" memlimit="10GB">
	
    <!-- Define benchmarks -->
    <tasks>
        <withoutfile>resources/benchmark/jair_sat/dpm</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/grid</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/grid-10-sl-4fsc</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/grid-meet-sl-2fsc</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/herman</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/maze</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/maze-sl-5</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/pole</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/pole-res</withoutfile>
        <withoutfile>resources/benchmark/jair_sat/refuel-06-res</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/dpm</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/grid</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/grid-10-sl-4fsc</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/grid-meet-sl-2fsc</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/herman</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/maze</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/maze-sl-5</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/pole</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/pole-res</withoutfile>
        <withoutfile>resources/benchmark/jair_unsat/refuel-06-res</withoutfile>
    </tasks>

    <!-- Define executors -->
    <rundefinition name="Molehill">
        <column title="Molehill Execution Time" />
        <require cpuCores="1"/>
    <option>-m</option>
    <option>molehill</option>
    </rundefinition>

    <rundefinition name="Paynt-AR">
        <column title="Paynt AR Execution Time" />
        <require cpuCores="1"/>
    <option>build/paynt/paynt.py</option>
    <option>--method</option>
    <option>ar</option>
    </rundefinition>

    <rundefinition name="Paynt-CEGIS">
        <column title="Paynt CEGIS Execution Time" />
        <require cpuCores="1"/>
    <option>build/paynt/paynt.py</option>
    <option>--method</option>
    <option>cegis</option>
    </rundefinition>

    <rundefinition name="Paynt-Hybrid">
        <column title="Paynt Hybrid Execution Time" />
        <require cpuCores="1"/>
    <option>build/paynt/paynt.py</option>
    <option>--method</option>
    <option>hybrid</option>
    </rundefinition>
</benchmark>

