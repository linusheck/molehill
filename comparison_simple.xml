<?xml version="1.0" encoding="UTF-8"?>
<benchmark tool="tools.synthesis" timelimit="3000s" hardtimelimit="3000s" memlimit="16GB">

  <tasks name="SAT Benchmarks">
    <include>benchmarks/files/simple/sat*.yml</include>
    <propertyfile>benchmarks/sat.txt</propertyfile>
  </tasks>

  <tasks name="UNSAT Benchmarks">
    <include>benchmarks/files/simple/unsat*.yml</include>
    <propertyfile>benchmarks/unsat.txt</propertyfile>
  </tasks>


    <rundefinition name="Molehill">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>none</option>
    </rundefinition>

    <rundefinition name="Paynt-AR">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>ar</option>
    </rundefinition>

    <rundefinition name="Paynt-CEGIS">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>cegis</option>
    </rundefinition>

    <rundefinition name="Paynt-Hybrid">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>hybrid</option>
    </rundefinition>
</benchmark>
