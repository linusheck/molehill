<?xml version="1.0" encoding="UTF-8"?>
<benchmark tool="tools.synthesis" timelimit="1800s" hardtimelimit="1800s" memlimit="16GB">

  <tasks name="SAT Benchmarks">
    <include>benchmarks/files/simple-q1/*.yml</include>
    <propertyfile>benchmarks/sat.txt</propertyfile>
  </tasks>

  <tasks name="UNSAT Benchmarks">
    <include>benchmarks/files/simple-q1/*.yml</include>
    <propertyfile>benchmarks/unsat.txt</propertyfile>
  </tasks>


    <rundefinition name="SMPMC">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>none</option>
    </rundefinition>

    <rundefinition name="PAYNT-AR">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>ar</option>
    </rundefinition>

    <rundefinition name="PAYNT-CEGIS">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>cegis</option>
    </rundefinition>

    <rundefinition name="PAYNT-Hybrid">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>build/paynt/paynt.py</option>
        <option>--method</option>
        <option>hybrid</option>
    </rundefinition>

    <rundefinition name="SMT(LRA)">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>none</option>
        <option>--pure-smt</option>
    </rundefinition>

    <rundefinition name="SMPMC">
        <column title="Iterations" value="iterations"/>
        <require cpuCores="1"/>
        <option>-m</option>
        <option>molehill</option>
        <option>--ce</option>
        <option>none</option>
    </rundefinition>

</benchmark>
